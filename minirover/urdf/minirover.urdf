<?xml version='1.0'?>
<robot name="gopigo">

  <!-- Based on gopigo3.urdf -->
  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="0.2 0.11 0.005"/>
      </geometry>
    </visual>
  </link>

  <link name="porch_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="0.12 0.11 0.005"/>
      </geometry>
    </visual>
  </link>

  <joint name="porch_link" type="fixed">
    <parent link="base_link"/>
    <child link="porch_link"/>
    <origin xyz="0.04 0.0 0.05" rpy="0 0 0" /> 
  </joint>

  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.01" radius="0.03" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.01" radius="0.03" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.05 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.05 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

</robot>
